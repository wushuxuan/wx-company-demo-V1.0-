<!--address.wxml-->
<view class="container"> 
    <!--顶部背景图片-->
    <view class="address_top_bg">
      <image src="{{top_bg_imag}}"></image>
    </view>
     <!--公司具体地址和介绍-->
     <view class="address_content">
        <text class="address">上海市浦东新区杨南路455号</text>
        <text bindtap="calling" class="address call">☎ 13641650994</text>
     </view>



     <!--地图公司具体地址-->
     <view class="map">
        <text>上海嘀友租赁公司</text>
        <map id="map" longitude="121.53" latitude="31.22" scale="14" controls="{{controls}}" bindcontroltap="controltap" markers="{{markers}}" bindmarkertap="markertap" polyline="{{polyline}}" bindregionchange="regionchange" show-location style="width: 100%; height: 300px;">
        </map> 
     </view>
</view>