/* pages/service/service.wxss */
.container{
  background:#f2f3f5;
}
.container .appoint_nav{
  width:100%;
  background:#fff;
  height:20%;
  text-align: center;
}
.container .appoint_nav text{
  display: inline-block;
  width:30%;
  height:40px;
  line-height: 40px;
  border-bottom: 3px solid #48c23d;
}

/*内容*/
.service_content{
  width:100%;
  height:80%;
  margin-top:5%;
  padding-bottom:3%;
}
.service_content .flex-wrap{
  width:40%;
  padding:5% 2%;
  float: left;
  margin:5% 3%;
  border-radius: 5px;
  background:#fff;
  box-shadow: 3px 3px 5px #d8d8d8;
}
.service_content .flex-wrap .title{
  width:100%;
  display: inline-block;
  font-weight: bold;
  text-align: center;
}
.service_content .flex-wrap image{
  width:80px;
  height:80px;
  display: block;
  margin:10px auto;
}
.service_content .flex-wrap .notice{
  font-size:12px;
  color: #888;
   width:100%;
  display: inline-block;
  text-align: center;
}
.service_content .flex-wrap .button{
  border:1px solid #eee;
  background:#f0f0f0;
  width:60%;
  padding:5px 0px;
  display: inline-block;
  margin-left:20%;
  border-radius: 5px;
  font-size:13px;
  text-align: center;
  color:#646464;
  margin-top:10px;
}
.service_content .flex-wrap .button-hover{
  background:#48c23d;
  color:#fff;
}