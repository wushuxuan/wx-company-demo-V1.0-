/* company/pages/endorsement/endorsement.wxss */

.container{
  background:#eee;
}
.container .nav{
  width:100%;
  padding:15px 0px;
  text-align: center;
}
.container .nav text{
  font-size:13px;
  color:#888;
}

/*内容*/
.content{
  width:100%;
  padding-bottom:5px;
  margin-bottom:20px;
}
.flex-wrap{
  width:100%;
  background:#fff;
  padding-bottom:10px;
  margin-top:10px;
}
.flex-wrap .title{
  width:100%;
  font-size:16px;
  font-weight: bold;
  padding:10px 0px;
}
.flex-wrap .title text{
  display: inline-block;
  margin-left:20px;
}

.title_flex{
  width:100%;
  padding:5px 5%;
  border-right:1px solid #eee;
  text-align: center
}
.list{
  width:30%;
  float: left;
  text-align: center;
}
.list:nth-child(2){
  border-right:1px solid #ddd;
  border-left:1px solid #ddd;
}

.list text{
  font-size:14px;
  display:inline-block;
  width:100%;
  margin-bottom:5px;
  text-align: center;
}
.list text.name{
  color:#888;
}
.list text.value{
  color:#fb4218;
  font-weight: bold;
}
.navigator{
  width:90%;
}
.title_flex navigator{
  display: inline-block;
  width:100%;
  padding:3% 0px;
  margin:15px auto 0px;
  background:#48c23d;
  border-radius: 5px;
  color:#fff;
  text-align: center;
}


/*服务保障*/
.service_content{
  width:100%;
  padding:15px 0px 10px;
  background: #fff;

}
.service_content>text{
  display: inline-block;
  width:96%;
  padding-left:3%;
  font-weight: bold;
  font-size:14px;
}
.service_list{
  width:26%;
  display: inline-block;
  padding:5px 0px 0px;
  text-align: center;
  margin-left:5%;
}
.service_list .image{
  margin-bottom:5px;
}
.service_list .image image{
  display: inline-block;
  width:35px;
  height:35px;
}
.service_list text{
  display: inline-block;
  width: 100%;
  font-size:10px;
  margin-top: 3px;
  color:#888;
}
.service_list text.title{
  color:#000;
  font-size:14px;
}