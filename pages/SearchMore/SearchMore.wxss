/* company/pages/SearchMore/SearchMore.wxss */
page {  
  display: block;  
  min-height: 100%;  
  background-color: #eee;  
} 
.container{
  background:#eee;
}
.top_nav{
  width:100%;
  background:#fff;
  border-bottom:1px solid #eee;
}
.top_nav .left,.right{
  display: inline-block;
  width:50%;
  padding:15px 0px;
}
.top_nav .left text{
  font-weight: bold;
  font-size:15px;
  padding-left:10px;
}
.top_nav .right .list{
  width:30%;
  display: inline-block;
  font-size:12px;
  color:#888;
  text-align: center
}
.top_nav .right .flex-wrap:nth-child(2){
  border-left:1px solid #d8d8d8;
  border-right:1px solid #d8d8d8;
}


/*内容*/
.content{
  width:95%;
  margin:15% auto;
  background:#48c23d;
  padding-top:10px;
}
.content .header{
  width:100%;
  margin:0 auto;
  background:#fff;
}
.content .header .list{
  width:100%;
  border-bottom:1px solid #eee;
}
.content .header .list .flex-warp{
  width:33%;
  display: inline-block;
  font-size: 15px;
}
.content .header .list .flex-warp text.block{
  display:block;
  text-align: center;
  padding:10px 0px;
  font-weight: bold;
}
.content .header .list .flex-warp text.red{
  color: #fb3a15;
  font-weight: bold;
}

.decir{
  width:100%;
  padding:15px 0px;
  background:#fff;
  border-bottom:1px solid #eee;
}
.decir text{
  display: inline-block;
  width:95%;
  margin-left:2.5%;
  line-height: 25px;
  color:#333;
  font-size:14px;
}

.content .footer{
  width:100%;
  color:#000;
  padding:15px 10px;
  font-size:13px;
}


/*支付*/
.pay_bottom{
  position:fixed;
  bottom:0px;
  width:100%;
  background:#fff;
}
.pay_bottom .flex-wrap{
  display: inline-block;
  width:75%;
  text-align: left;
  float: left;
  padding:10px 0px;
}
.pay_bottom .flex-wrap text{
  padding-left:10px;
}
.pay_bottom .flex-wrap .num{
  color:#fc3e17;
  font-weight: bold;
}
.pay_bottom .button{
  width:25%;
  background:#48c23d;
  color:#fff;
  text-align: center;
  float:right;
  padding:15px 0px;
}