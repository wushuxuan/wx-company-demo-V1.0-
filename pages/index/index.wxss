/**index.wxss**/
.container{
  width: 100%;
  overflow-x:hidden; 
  }
.car_top{
  width: 100%;
  position: relative;
}
.car_top .car_top_bg{
  width: 100%;
  position: absolute;
  top:0px;
  z-index: 1;
}
.car_top .car_top_bg image{
  width:100%;
  height: 170px;
}
.car_top_nav{
  width:95%;
  height:150px;
  position: absolute;
  top:150px;
  left:2.5%;
  z-index: 10;
  background: #fff;
  border-radius: 7px 7px 0px 0px;
}
.car_top_nav .nav{
  width: 100%;
}
.car_top_nav .nav .name{
  font-weight: bold;
}
.car_top_nav .nav .flex-wrap{
  width:50%;
  display: inline-block;
  text-align: center;
  padding:10px 0px;
}
.car_top_nav .nav .call{
  background:#48c23d;
  border-radius: 0px 7px 0px 0px;
  color: #fff;
}
.car_top_nav .nav_list{
  width:99%;
  padding-top:8px;
  padding-bottom:20px;
  box-shadow: 3px 3px 5px #eee;
}
.car_top_nav .nav_list .flex-wrap{
  width: 25%;
  display: inline-block;
}
.car_top_nav .imagebox{
  width: 98%;
  text-align: center;
  margin-top:20px;
}
.car_top_nav .nav_list .flex-wrap image{
  width: 32px;
  height: 32px;
}
.car_top_nav .nav_list .flex-wrap text{
  display: inline-block;
  width:100%;
  font-size: 12px;
  text-align: center;
}
/** 修改默认的navigator点击态 **/
.navigator-hover {
    background:none;
}



/*汽车展示*/
.showcar{
  width:100%;
  position: relative;
  top:310px;
  z-index: 100;
}
  /*汽车展示的title*/
.showcar .showcar_title{
  border-bottom: 1px solid #eee;
  padding:10px;
  background: #fff;
}
.showcar .showcar_title .icon{
  color:#48c23d;
  display:inline-block;
  width:8%;
  text-align: center;
}
.showcar .showcar_title .text{
  display:inline-block;
  width:68%;
  color:#333;
  font-size: 16px;
  font-weight: bold;
}
.showcar .showcar_title .more{
  display: inline-block;
  font-size: 12px;
  color: #888;
}
 /*汽车展示的列表*/
 .showcar .showcar_list{
   width: 100%;
   padding:2px;
   position: relative;
 }
 .showcar .showcar_list .flex-wrap{
   width:48%;
   margin-left:3px;
   margin-top:3px;
   display:inline-block;
   position: relative;
 }
  .showcar .showcar_list .flex-wrap text{
    position: absolute;
    bottom:0px;
    background: rgba(34,34,34,0.8);
    opacity: 1;
    display: inline-block;
    width:100%;
    padding:5px 0px;
    color:#fff;
  }
  .showcar .showcar_list .top2{
    margin-top:5px;
  }
 .showcar .showcar_list .right{
  margin-left:4px;
 }
 .showcar .showcar_list .flex-wrap .imagebox{
    width: 100%;
  }
 .showcar .showcar_list .flex-wrap .imagebox image{
      width:100%;
      height:100px;
}

/*待租车辆*/

/*汽车展示的title*/
.showcar .renting_title{
  margin-top:5px;
  border-bottom: 1px solid #eee;
  padding:10px;
}
.showcar .renting_title .icon{
  color:#48c23d;
  display:inline-block;
  width:8%;
  text-align: center;
}
.showcar .renting_title .text{
  display:inline-block;
  width:68%;
  color:#333;
  font-size: 16px;
  font-weight: bold;
}
.showcar .renting_title .more{
  font-size: 12px;
  display:inline-block;
  color: #888;
}

.showcar .renting .flex-wrap{
  display: inline-block;
  width:47%;
  margin-left:4px;
  border:1px solid #e4e4e4;
  padding:5px 0px;
  margin-top: 5px;
  position: relative;
  box-shadow: 3px 3px 5px #eee;
  background:#fff;
}
.showcar .renting .right{
  float: right;
  margin-right: 3px;
  margin-left: 0px;
}
.showcar .renting .flex-wrap .imagebox{
    width: 100%;
  }
 .showcar .renting .flex-wrap .imagebox image{
      display: inline-block;
      width:94%;
      height:120px;
      margin-left:3%;
      border-radius: 5px;
}
.showcar .renting .flex-wrap .text{
  display: block;
  width: 90%;
  margin: 0 auto;
  text-align: center;
  font-size:14px;
  margin-top:5px;
}
.showcar .renting .flex-wrap .text .money{
  color: #fd451a;
  font-weight: bold;
}
.showcar .renting .flex-wrap .button{
  display: block;
  width:80%;
  margin:5px auto;
  padding:7px 0px;
  text-align: center;
  background:#48c23d;
  border-radius: 5px;
  color:#fff;
}

  /*更多服务敬请期待*/
