/* pages/appointment/appointment.wxss */
.container{
  background: #efefef;
}
.container .address_top_bg{
  width: 100%;
  height:170px;
}
.container .address_top_bg image{
  width: 100%;
  height:100%;
}


.appoint_nav{
  width:100%;
  background:#fff;
  height:20%;
  text-align: center;
}
.container .appoint_nav text{
  display: inline-block;
  width:30%;
  height:40px;
  line-height: 40px;
  border-bottom: 3px solid #48c23d;
}



/*内容*/
.appoint_content{
  width:100%;
}
.appoint_content .flex-wrap{
  width: 95%;
  margin:15px auto;
   font-size:13px;
   background:#fff;
   padding:10px 0px;
   border-radius:10px; 
   box-shadow: 3px 3px 5px #d8d8d8;
}
.appoint_content .flex-wrap .title{
  padding-left:10px;
  font-weight: bold;
  margin:10px 0px;
}
.appoint_content .flex-wrap .tiao view{
  margin:5px 0px;
  padding:0px 15px;
  font-size:12px;
  line-height: 20px;
}